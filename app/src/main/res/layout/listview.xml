<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intentosRanking"
        android:id="@+id/intentsRanking"
        android:layout_below="@+id/nomRanking"
        android:textColor="@color/hintColor"
        android:layout_toRightOf="@+id/fotoPerfil"
        android:layout_toEndOf="@+id/fotoPerfil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/username"
        android:id="@+id/nomRanking"
        android:textSize="21sp"
        android:textColor="@color/contentColor"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fotoPerfil"
        android:layout_toEndOf="@+id/fotoPerfil" />
    <!-- https://androidstudiofaqs.com/tutoriales/adapter-personalizado-en-android -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/fotoPerfil"
        android:cropToPadding="false"
        android:src="@drawable/no_profile_pic_tiny"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/intentsRanking"
        android:maxHeight="35dp"
        android:maxWidth="35dp"
        android:adjustViewBounds="true" />

</RelativeLayout>